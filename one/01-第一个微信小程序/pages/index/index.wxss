/*轮播图分区  */
.slider,
.slider image,
.slider swiper {
  width: 100%;
  height: 390rpx;
  vertical-align: middle;
}

/*首页导航分区  */
.wrap {
  display: flex;
  flex-wrap: wrap;
}
.item {
  display: flex;
  width: 33.333%;
  height: 200rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  border-bottom:1rpx solid #ccc; 
}
.item image{
  width: 80rpx;
  height: 80rpx;
} 

/* 首页入口分区 */
.index-enter {
  display: flex;
  padding: 20rpx 35rpx;
  justify-content: space-between;   
}
